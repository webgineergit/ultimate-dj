{
  "name": "ultimate-dj",
  "version": "1.0.0",
  "description": "Browser-based DJ software with video mixing, audio visualization, and karaoke lyrics",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
